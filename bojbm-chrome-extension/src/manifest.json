{
    "name" : "BOJ Bookmark Extension",
    "version" : "1.0.3",
    "description":"백준(BOJ) 문제 북마크 알람(이메일) 기능",
    "manifest_version":3,
    "action":{
        "default_popup":"popup.html",
        "default_icon":"icon-34.png"
    },
    "icons":{
        "128":"icon-128.png"
    },
    "background":{
        "service_worker":"background.bundle.js"
    },
    "permissions":["storage"],
    "host_permissions":["https://www.acmicpc.net/**","http://ec2-3-39-95-47.ap-northeast-2.compute.amazonaws.com:8080/**"],
    "content_scripts":[{
        "matches":["https://www.acmicpc.net/problem/*"],
        "exclude_matches":["https://www.acmicpc.net/problem/status/*","https://www.acmicpc.net/problem/history/*"],
        "js":["contentScript.bundle.js"]
    }]
}
